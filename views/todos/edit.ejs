<%- include('../partials/header') %>

<h2>Edit To-Do</h2>

<form action="/todos/<%= todo._id %>?_method=PUT" method="POST" class="form">
    <div class="form-group">
        <label for="text">To-Do:</label>
        <input type="text" id="text" name="text" value="<%= todo.text %>" required>
    </div>
    <div class="form-group">
        <label for="completed">Completed:</label>
        <input type="checkbox" id="completed" name="completed" <%= todo.completed ? 'checked' : '' %>>
    </div>
    <button type="submit" class="btn submit-btn">Update To-Do</button>
</form>

<%- include('../partials/footer') %>